<!doctype html>
<html>

	<head>
		<meta charset="UTF-8">
		<title></title>
		<meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
		<link href="../../css/mui.min.css" rel="stylesheet" />
		<link rel="stylesheet" type="text/css" href="../../css/main.css" />
		<link rel="stylesheet" type="text/css" href="../../css/my-app.css" />
	</head>

	<body>
		<header class="mui-bar mui-bar-nav">
			<a class="mui-action-back mui-icon mui-icon-left-nav mui-pull-left"></a>
			<h1 class="mui-title">审批操作</h1>
		</header>
		<div class="mui-content">
			<form id="form" class="mui-input-group">
				<div class="mui-card">
					<div class="mui-card-header">审批意见</div>
					<div class="mui-card-content">

						<div class="mui-input-row mui-radio mui-left">
							<label>同意</label>
							<input name="radio1" type="radio">
						</div>
						<div class="mui-input-row mui-radio mui-left">
							<label>否决</label>
							<input name="radio1" type="radio" checked>
						</div>
						<div class="mui-input-row mui-radio mui-left">
							<label>退回</label>
							<input name="radio1" type="radio">
						</div>

					</div>
				</div>

				<div class="mui-card">
					<div class="mui-card-header">审批意见说明</div>
					<div class="mui-card-content">
						<div class="card-content-inner">
							<div class="list-block">
								<ul>
									<li class="align-top" style="list-style: none;">
										<div class="item-content">
											<div class="item-inner">
												<div class="item-title label"></div>
												<div class="item-input">
													<textarea id="textarea"></textarea>
												</div>
											</div>
										</div>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</form>
			<div style=" margin: 10px; width:calc(100% - 20px); margin-top: 30px;">
				<button id="btn" class="mui-btn mui-btn-primary" style="width: 100%;">
					提交
				</button>

			</div>
			<script src="../../js/mui.min.js"></script>
			<script type="text/javascript">
				mui.init({});
				mui.plusReady(function() {
					plus.webview.currentWebview().setStyle({scrollIndicator:'none'});
					plus.key.addEventListener('keydown', function(e) {
						console.log(e.keyCode);
						if(e.keyCode == 4) {
							var w = plus.webview.currentWebview();
							plus.screen.lockOrientation("portrait-primary");
							plus.webview.close(w);
						}
					});
				});

			</script>
	</body>

</html>