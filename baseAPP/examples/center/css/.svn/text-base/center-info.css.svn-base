@keyframes redline {
	0% {
		border: 1px #FFFFFF solid;
	}
	50% {
		border: 1px red solid;
	}
	100% {
		border: 1px #FFFFFF solid;
	}
}

.long-body .content-info {
	border: 1px solid #ccc;
	padding: 14px;
	border-radius: 12px;
	margin: 20px;
	font-size: 12px;
	color: #999;
	line-height: 20px;
}

