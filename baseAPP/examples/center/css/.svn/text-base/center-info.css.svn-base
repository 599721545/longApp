* {
	margin: 0px;
	padding: 0px;
	font-family: "微软雅黑";
}

html,
body {
	height: 100%;
	width: 100%;
}

a {
	color: #ffffff;
}

a:link {
	text-decoration: none;
}

a:visited {
	text-decoration: none;
}

a:hover {
	text-decoration: none;
}

a:active {
	text-decoration: none;
}

.header {
	background-color: #2881AB;
	height: 360px;
	width: 100%;
}

.header-fix-top {
	width: 100%;
	height: 40px;
	line-height: 40px;
	position: fixed;
	top: 0px;
	background-color: #2881AB;
}

.header-fix-top .level {
	text-align: center;
	font-size: 12px;
	display: inline-block;
	width: 90px;
	height: 25px;
	line-height: 22px;
	border-radius: 11px;
	margin-left: 10px;
	color: #ffffff;
	background-color: rgba(0, 0, 0, 0.15);
}

.level .star {
	margin-left: 3px;
}

.level .star:before {
	content: "\2605";
	font-style: normal;
	font-size: 18px;
	color: yellow;
}

.header-fix-top .tools {
	color: #FFFFFF;
	float: right;
	font-size: 14px;
	margin-right: 10px;
}

.header-main-info {
	height: calc(100% - 40px);
	margin-top: 39px;
	position: relative;
	z-index: 1;
}

.header-main-info .main-weather {
	position: absolute;
	top: 10px;
	color: #FFFFFF;
	font-size: 14px;
	padding-left: 10px;
}

.main-weather .area {}

.main-weather .weather {}

.main-weather .qiandao {
	text-align: center;
	font-size: 12px;
	display: block;
	width: 54px;
	height: 25px;
	line-height: 25px;
	border-radius: 11px;
	color: #ffffff;
	background-color: rgba(0, 0, 0, 0.15);
	margin-top: 10px;
}

.header-main-info .main-title {
	width: 100%;
	text-align: center;
	color: #FFFFFF;
	padding: 10px 0;
}

.header-main-info .main-circle {
	text-align: center;
	font-size: 12px;
	color: #ffffff;
	width: 130px;
	height: 130px;
	border-radius: 100%;
	margin: 20px auto 10px auto;
	box-shadow: 0px -5px 20px #FFFFFF;
	position: relative;
	border: 1px #FFFFFF solid;
	animation: redline 2s infinite linear;
}

.header-main-info .main-circle:before {
	content: " ";
	width: 130px;
	height: 130px;
	border-radius: 100%;
	box-shadow: 0px 5px 20px #ffffff inset;
	display: block;
	margin: 0px;
}

.main-circle .tips {
	position: absolute;
	top: 18px;
	left: 0px;
	right: 0px;
}

.main-circle .currVal {
	position: absolute;
	top: 37px;
	left: 0px;
	right: 0px;
	font-size: 24px;
}

.main-circle .currVal em {
	font-size: 12px;
	font-style: normal;
}

.main-circle .per {
	position: absolute;
	top: 67px;
	left: 0px;
	right: 0px;
}

.main-circle .cll {
	position: absolute;
	top: 90px;
	left: 0px;
	right: 0px;
	text-align: center;
}

.main-circle .cll a {
	display: block;
	text-align: center;
	border-radius: 10px;
	border: 1px solid #eaeaea;
	width: 60px;
	height: 18px;
	background-color: rgba(255, 255, 255, 0.15);
	margin: 0 auto;
}

.header-main-info .main-infos {
	width: 100%;
	height: 109px;
}

.header-main-info .main-infos .main-info {
	background-color: #2881AB;
	width: 25%;
	float: left;
	height: 100%;
	color: #ffffff;
	text-align: center;
}

.main-info p {
	margin-top: 10px;
	font-size: 14px;
}

.main-info small {
	font-size: 14px;
}

.main-info small>em {
	font-size: 10px;
	font-style: normal;
}

.main-info a {
	display: block;
	text-decoration: none;
	border-radius: 10px;
	border: 1px solid #eaeaea;
	font-size: 12px;
	color: #ffffff;
	width: 60px;
	height: 18px;
	background-color: rgba(255, 255, 255, 0.15);
	margin: 20px auto 0 auto;
}

.header-sub-info {
	/*display: none;*/
	height: 100px;
	position: fixed;
	top: 40px;
	left: 0px;
	right: 0px;
	z-index: 2;
	opacity: 0;
	background-color: #2881AB;
}

.header-sub-info .sub-info {
	background-color: #2881AB;
	width: 33%;
	float: left;
	color: #ffffff;
	text-align: center;
	padding-top: 20px;
}

.sub-info p {
	margin-top: 10px;
	font-size: 14px;
}

.sub-info small {
	font-size: 14px;
}

.sub-info small>em {
	font-size: 10px;
	font-style: normal;
}

.sub-info.sub-info-center {
	padding-top: 10px;
}

.sub-info.sub-info-center p {}

.sub-info.sub-info-center small {
	font-size: 24px;
}

